<Window x:Class="SupervisorioCheetah.WindowChooseSerialPort"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupervisorioCheetah"
        mc:Ignorable="d"
        Title="WindowChooseSerialPort" Height="160" Width="300">
    <Grid>
        <Label x:Name="label" Content="Porta Serial:" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbxList" HorizontalAlignment="Left" Margin="120,30,0,0" VerticalAlignment="Top" Width="150" IsEditable="False"/>
        <Button x:Name="btnCancel" Content="Cancelar" HorizontalAlignment="Left" Margin="205,80,0,0" VerticalAlignment="Top" Width="70"/>
        <Button x:Name="btnConect" Content="Conectar" HorizontalAlignment="Left" Margin="115,80,0,0" VerticalAlignment="Top" Width="70" Click="btnConect_Click"/>
        <Button x:Name="btnRefresh" Content="Atualizar" HorizontalAlignment="Left" Margin="25,80,0,0" VerticalAlignment="Top" Width="70" Click="btnRefresh_Click"/>

    </Grid>
</Window>
